# Enable colors for ls, etc.
eval `dircolors -b ~/.dir_colors`

alias vialias='vi ~/.alias'
alias sourcea='source ~/.alias; echo "DONE: source ~/.alias"'
alias bashrc='vi ~/.bashrc'
alias sourceb='source ~/.bashrc; echo "DONE: source ~/.bashrc"'

alias ls="ls --color=auto -F"
alias la='ls -A'
alias l='ls -CF'
alias ls='ls --color=auto'
alias md='mkdir'
alias rd='rmdir'
alias ll='ls -l --color=auto'
alias dir='ls -l | grep ^d'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# For when running FastCGI
alias restartrails='killall -USR1 dispatch.fcgi'

alias back='cd $OLDPWD'

# RVM
alias ruby192='/home/recipes_dev/.rvm/rubies/ruby-1.9.2-p290/bin'

# Git
alias glp='git log --pretty=full --stat --author=[NAME]'
alias gpr='git pull --rebase'

### Site specific Passenger restarts

# Shared Recipe
alias restartsr='touch ~/shared.recipes.[SERVER].com/dev/recipeweb/tmp/restart.txt'

# BeefNacho
alias restartbn='touch ~/beefnacho.com/web/tmp/restart.txt'
alias restartbeefnacho='touch ~/beefnacho.com/web/tmp/restart.txt'
alias restartbnd='touch ~/dev.beefnacho.com/web/tmp/restart.txt'
alias restartbeefnachodev='touch ~/dev.beefnacho.com/web/tmp/restart.txt'

# ChickenNacho
alias restartcn='touch ~/chickennacho.com/web/tmp/restart.txt'
alias restartchickennacho='touch ~/chickennacho.com/web/tmp/restart.txt'
alias restartcnd='touch ~/dev.chickennacho.com/web/tmp/restart.txt'
alias restartchickennachodev='touch ~/dev.chickennacho.com/web/tmp/restart.txt'

# Recipes
alias restartrecipes[SERVER]='touch ~/recipes.[SERVER].com/web/tmp/restart.txt'
alias restartras='touch ~/recipes.[SERVER].com/web/tmp/restart.txt'
alias restartrasd='touch ~/dev.recipes.[SERVER].com/web/tmp/restart.txt'
alias restartrecipes[SERVER]dev='touch ~/dev.recipes.[SERVER].com/web/tmp/restart.txt'

